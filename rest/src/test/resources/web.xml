<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
   http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
  version="3.1">
  <display-name>JavaEE Sample REST</display-name>

  <!-- servlet-mapping>
    <servlet-name>javax.ws.rs.core.Application</servlet-name>
    <url-pattern>/api/*</url-pattern>
  </servlet-mapping-->
  
  <security-constraint>
    <web-resource-collection>
      <web-resource-name>swagger</web-resource-name>
      <url-pattern>/api/swagger*</url-pattern>
      <http-method>*</http-method>
    </web-resource-collection>
  </security-constraint>
  
  <security-constraint>
    <web-resource-collection>
      <web-resource-name>public</web-resource-name>
      <url-pattern>/api/session/*</url-pattern>
      <http-method>*</http-method>
    </web-resource-collection>
  </security-constraint>
  
  <!--Defining security constraint for type of roles available -->
  <security-constraint>
    <web-resource-collection>
      <web-resource-name>admin</web-resource-name>
      <url-pattern>/api/admin/*</url-pattern>
      <http-method-omission>OPTIONS</http-method-omission>
    </web-resource-collection>
    <auth-constraint>
      <role-name>ADMIN</role-name>
    </auth-constraint>
  </security-constraint>
  
  <!--Defining security constraint for type of roles available -->
  <security-constraint>
    <web-resource-collection>
      <web-resource-name>manager</web-resource-name>
      <url-pattern>/api/manager/*</url-pattern>
      <http-method-omission>OPTIONS</http-method-omission>
    </web-resource-collection>
    <auth-constraint>
      <role-name>ADMIN</role-name>
    </auth-constraint>
  </security-constraint>
  
  <!--Defining security constraint for type of roles available -->
  <security-constraint>
    <web-resource-collection>
      <web-resource-name>session</web-resource-name>
      <url-pattern>/api/game/session/*</url-pattern>
      <http-method-omission>OPTIONS</http-method-omission>
    </web-resource-collection>
    <auth-constraint>
      <role-name>THERAPIST</role-name>
      <role-name>PATIENT</role-name>
    </auth-constraint>
  </security-constraint>
  <!--Defining security constraint for type of roles available -->

  <!--Denining security role -->
  <security-role>
    <role-name>ADMIN</role-name>
  </security-role>

  <security-role>
    <role-name>MANAGER</role-name>
  </security-role>

  <security-role>
    <role-name>PATIENT</role-name>
  </security-role>

  <security-role>
    <role-name>THERAPIST</role-name>
  </security-role>
  <!--Denining security role -->
  
  <login-config>
    <auth-method>BASIC</auth-method>
    <realm-name>default</realm-name>
  </login-config>
</web-app>